<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativelayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/imageBackground"
        android:layout_width="400px"
        android:layout_height="400px"
        android:src="@drawable/ic_launcher_background">
    </ImageView>

    <LinearLayout
        android:layout_width="400px"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/imageBackground"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/inforbackground"
            android:gravity="center_vertical"
            android:background="@drawable/bg_black_mask"
            android:textSize="20dp"
            android:shadowColor="@color/colorPrimary"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="12"
            android:textColor="#FFFFFF" />
        <ImageView
            android:id="@+id/boolen"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/imageBackground"
            android:layout_alignBottom="@+id/imageBackground"
            android:background="@drawable/bg_black_mask"
            android:layout_alignRight="@id/imageBackground"/>
    </LinearLayout>

</RelativeLayout>